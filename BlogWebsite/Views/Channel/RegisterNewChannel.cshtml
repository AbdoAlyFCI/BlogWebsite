@model channelRegister
@{
    ViewData["Title"] = "RegisterNewChannel";
}

<div class="RegisterSection">
    <form asp-action="RegisterNewChannel" asp-controller="Channel" method="post" enctype="multipart/form-data">
        <span asp-validation-for="ID"></span>
        <span asp-validation-for="name"></span>
        <span asp-validation-for="description"></span>
        <span asp-validation-for="Pic"></span>
        <span asp-validation-for="Cover"></span>
        <fieldset>
            <legend class="text-center"><b>Register new channel</b></legend>
            <table>
                <tr>
                    <th>Channel name*</th>
                    <td><input class="inputText" asp-for="@Model.name" /></td>
                </tr>
                <tr>
                    <th>Channel ID*</th>
                    <td><input class="inputText" asp-for="@Model.ID" /></td>
                </tr>
                <tr>
                    <th>Channel description</th>
                    <td><textarea cols="23" rows="10" class="inputText" style="height:70px;" asp-for="@Model.description"></textarea></td>
                </tr>
                <tr>
                    <th>Uplode cover Img</th>
                    <td><input asp-for="Cover" type="file" /></td>
                </tr>
                <tr>
                    <th>Uplode Img</th>
                    <td><input asp-for="Pic" type="file" /></td>
                </tr>
                <tr>
                    <td colspan="2"><button class="btn btn-danger" style="width:85%"> Create new channel</button></td>
                </tr>
            </table>
        </fieldset>
    </form>
</div>

