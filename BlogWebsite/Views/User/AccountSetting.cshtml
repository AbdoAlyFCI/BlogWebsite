@model ModelUser
@{
    ViewData["Title"] = "Account Setting";
}
<div id="PersonalPic">
    <div>
        <img class="lg-img" src="@Model.img" />
        <button id="changeImgPicBtn" >
            <i class="fas fa-camera"></i>
        </button>
        <h3>@Model.firstName @Model.lastName</h3>
        <h6>ID:@Model.ID</h6>
    </div>
</div>
<section>

    <div class="container">
        <div class="row">
            <div class="col-12">
                <div id="settingDetails">
                    <div class="row">
                        <div class="col-3">
                            <div id="settingList">
                                <ul>
                                    <li>
                                        <button class="btn btn-block" id="genraInfoBtn">Genral info</button>
                                    </li>
                                    <li>
                                        <button class="btn btn-block" id="followedChannelBtn">Followed channel</button>
                                    </li>
                                    <li>
                                        <button class="btn btn-block" id="blockUsersBtn">Block users</button>
                                    </li>
                                    <li>
                                        <button class="btn btn-block" id="muteTagsBtn">Mute tags</button>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-9">                           
                            <div id="genraInfo">
                                <h3>Genral info</h3>
                                <table class="table">

                                    <tr>
                                        <th>ID</th>
                                        <td>@Model.ID</td>
                                    </tr>
                                    <tr>
                                        <th>Name</th>
                                        <td>@Model.firstName @Model.lastName</td>
                                    </tr>
                                    <tr>
                                        <th>E-mail</th>
                                        <td>@Model.Email</td>
                                    </tr>
                                </table>
                                <br />
                                <h5>Change password</h5>
                                <form asp-controller="User" asp-action="passwordChange" method="post">
                                    <table class="table">
                                        <tr>
                                            <th>
                                                New Password
                                            </th>
                                            <td>
                                                <input asp-for="changePassword().Password" class="inputText" />
                                            </td>
                                            <td></td>
                                        </tr>
                                        <tr>
                                            <th>
                                               Confrim New Password
                                            </th>
                                            <td>
                                                <input asp-for="changePassword().confirmPassword" class="inputText" />
                                            </td>
                                            <td></td>
                                        </tr>
                                        <tr>
                                            <th>

                                            </th>
                                            <td>
                                                <button class="btn btn-danger" type="submit">Change</button>
                                            </td>
                                            <td></td>
                                        </tr>
                                    </table>
                                </form>
                            </div>
                            <div id="followedChannel" style="display:none">
                                <h3>followed Channel</h3>
                                @await Component.InvokeAsync("followBlockChannel", "F")
                            </div>
                            <div id="blockUsers" style="display:none">
                                <h3>Blocked User</h3>
                                @await Component.InvokeAsync("followBlockChannel", "B")
                            </div>
                            <div id="muteTags" style="display:none">
                                <h3>Mute tags</h3>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>




<div id="Headers" style="display:none">

    <span><strong style="font-size:larger">Add new Folder</strong></span>
    <i onclick="offNewFolder()" id="Close" class="fas fa-window-close"></i>
    <form method="post" asp-controller="User" asp-action="changeUserPic"  enctype="multipart/form-data">
        <input type="file" name="Pic" />
        <input type="submit" value="Uploade" />
    </form>
</div>

<script src="~/JavaScript/AccountSetting.js"></script>
